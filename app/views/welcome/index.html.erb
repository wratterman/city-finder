<head>
  <meta charset="utf-8">
  <meta content="utf-8" http-equiv="encoding">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="http://d3js.org/d3.v4.min.js"></script>
  <script src="http://dimplejs.org/dist/dimple.v2.3.0.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">CityFinder</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#">Economics By State</a></li>
        <li><a href="#">Crimes</a></li>
      </ul>
      <form class="navbar-form navbar-left">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </nav>
  <html>
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">By State
      <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <% @states.each do |state| %>
        <button id= "<%= state.id %>"class="stateSelector">
          <%= state.name %>
        </button>
        <% end %>
      </ul>
    </li>
    <h3 class=currentState></h3>
  <div id="citiesContainer">
    <script type="text/javascript">
    </script>
  </div>

  <div id="reportsContainer">
    <script type="text/javascript">
    </script>
  </div>
  </html>

  <script type="text/javascript">
    function populatedChartsListener() {
      $(".stateSelector").on("click", function(){
        fillDisplayCities(this.id)
        fillDisplayReports(this.id)
      })
    }

    function fillDisplayCities(stateId) {
      $.ajax({
        type: "GET",
        url: `api/v1/${stateId}/display_cities?limit=10`,
        success: function(data) {
          $("#citiesContainer").empty()
          var svg = dimple.newSvg("#citiesContainer", 590, 400);
          var cities = []
          let stateName = "";
          data.forEach(function(city) {
            stateName = city.state
            cities.push({ "City":`${city.name}`, "Population":city.population })
          })
          var myChart = new dimple.chart(svg, cities);
          myChart.setBounds(60, 30, 510, 305)
          var x = myChart.addCategoryAxis("x", "City");
          x.addOrderRule("Date");
          myChart.addMeasureAxis("y", "Population");
          myChart.addSeries(null, dimple.plot.bar);
          myChart.draw();
        }
      })
    }

    function fillDisplayReports(stateId) {
      $.ajax({
        type: "GET",
        url: `api/v1/${stateId}/display_reports`,
        success: function(data) {
          $("#reportsContainer").empty()
          var svg = dimple.newSvg("#reportsContainer", 590, 400);
          var months = []
          let stateName = "";
          data.forEach(function(report) {
            stateName = report.state
            months.push({ "Month/Year":`${report.month_year}`, "Weekly Earnings":report.avg_weekly_earnings })
          })
          var myChart = new dimple.chart(svg, months);
          myChart.setBounds(60, 30, 510, 305)
          var x = myChart.addCategoryAxis("x", "Month/Year");
          x.addOrderRule("Date");
          myChart.addMeasureAxis("y", "Weekly Earnings");
          myChart.addSeries(null, dimple.plot.bar);
          myChart.draw();
          $(".currentState").empty()
          $(".currentState").append(`<h3 class='currentState'>${stateName}</h3>`)
        }
      })
    }

    $(document).ready(function() {
      fillDisplayCities("6")
      fillDisplayReports("6")
      populatedChartsListener()
    })

  </script>
</body>
